<% @page_title = "All Admin Users"%>
<%= link_to("<< Back to list", admin_path, :class => 'back-link')%>

<div class="admin-users index">
  <h2>Admin Users</h2>

  <%= image_tag('plus_sign.png', :size => '11x11', :alt => '+') %>
  <%= link_to("Add New Admin", new_admin_user_path, :class => 'action new') %>

    <div> <%= pluralize(@adminusers.count, "Admin User") %> found</div>

  <table class="listing" summary="Admin-User list">
    <tr class="header">
      <th>Full Name</th>
      <th>Username</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @adminusers.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td class="center"><%= user.username %></td>
      <td class="center"><%= mail_to(user.email) %></td>
      <td class="actions">
        <%= link_to("Edit", edit_admin_user_path(user), :class => 'action edit') %>
        <%= link_to("Delete", delete_admin_user_path(user), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
